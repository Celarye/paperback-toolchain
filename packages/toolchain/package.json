{
  "name": "@paperback/toolchain",
  "description": "The Paperback extension development toolchain.",
  "author": "Faizan Durrani",
  "keywords": [
    "Paperback",
    "iOS",
    "TypeScript-types"
  ],
  "version": "1.0.0-alpha.28",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paperback-ios/paperback-toolchain.git"
  },
  "bugs": {
    "url": "https://github.com/paperback-ios/paperback-toolchain/issues"
  },
  "homepage": "https://github.com/paperback-ios/paperback-toolchain#readme",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "paperback-cli": "./bin/run.js"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b && cp -r src/homepage dist/ && cp -r src/shims dist/",
    "postpack": "shx rm -f oclif.manifest.json",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "mocha": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md",
    "eslint-check": "eslint --config ../../eslint.config.js",
    "eslint-write": "eslint --config ../../eslint.config.js --fix",
    "prettier-check": "prettier --config ../../prettier.config.js --check '**/*{.md,.yaml,.json,.html,.js,.ts}'  --ignore-path ../../.prettierignore",
    "prettier-write": "prettier --config ../../prettier.config.js --write '**/*{.md,.yaml,.json,.html,.js,.ts}'  --ignore-path ../../.prettierignore",
    "f-test": "tsc --noEmit && npm run eslint-check && npm run prettier-check"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.12.2",
    "@oclif/core": "^3.27.0",
    "@oclif/plugin-help": "^6.2.16",
    "@oclif/plugin-plugins": "^5.4.15",
    "@paperback/runtime-polyfills": "*",
    "@paperback/types": "*",
    "@protobuf-ts/runtime-rpc": "^2.9.4",
    "@types/fs-extra": "^11.0.4",
    "buffer": "^6.0.3",
    "chalk": "^4",
    "esbuild": "^0.19.12",
    "fs-extra": "^11.2.0",
    "listr2": "^8.2.5"
  },
  "devDependencies": {
    "@oclif/test": "^3.2.15",
    "@protobuf-ts/plugin": "^2.9.4",
    "@protobuf-ts/protoc": "^2.9.4",
    "@types/chai": "^4.3.20",
    "@types/listr": "^0.14.9",
    "@types/mocha": "^9.1.1",
    "@types/node": "^20.17.0",
    "chai": "^4.5.0",
    "grpc-tools": "^1.12.4",
    "mocha": "^10.7.3",
    "oclif": "^4.15.12",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2"
  },
  "oclif": {
    "bin": "paperback-cli",
    "dirname": "paperback-cli",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " "
  },
  "gitHead": "da3695f50658d1215036ee872c8572df76c72047"
}
